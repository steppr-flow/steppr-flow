# =============================================================================
# Steppr Flow Dashboard - Docker Environment Configuration
# Copy this file to .env and customize the values
# =============================================================================

# -----------------------------------------------------------------------------
# Version
# -----------------------------------------------------------------------------
STEPPR_FLOW_VERSION=latest

# -----------------------------------------------------------------------------
# Dashboard Configuration
# -----------------------------------------------------------------------------
DASHBOARD_PORT=8090
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
MONGODB_PORT=27017
MONGODB_USERNAME=stepprflow
MONGODB_PASSWORD=stepprflow

# -----------------------------------------------------------------------------
# Kafka Configuration (connect to your existing Kafka cluster)
# -----------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=your-kafka-host:9092

# -----------------------------------------------------------------------------
# RabbitMQ Configuration (if using RabbitMQ instead of Kafka)
# -----------------------------------------------------------------------------
RABBITMQ_HOST=your-rabbitmq-host
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
